<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<pragma once="true" />

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxCodec}/project/vlc/include" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${haxelib:hxCodec}/project/vlc/include" />
	</files>

	<target id="haxe" tool="linker" toolid="exe" if="windows">
		<lib name="${haxelib:hxCodec}/project/vlc/lib/Windows/libvlc.lib" if="HXCPP_M64" />
		<lib name="${haxelib:hxCodec}/project/vlc/lib/Windows/libvlccore.lib" if="HXCPP_M64" />
	</target>

	<target id="haxe" tool="linker">
		<section if="linux">
			<lib name="-lvlc" />
			<lib name="-lvlccore" />
		</section>

		<section if="macos">
			<lib name="${haxelib:hxCodec}/project/vlc/lib/Mac/libvlc.5.dylib" if="HXCPP_M64" />
			<lib name="${haxelib:hxCodec}/project/vlc/lib/Mac/libvlccore.7.dylib" if="HXCPP_M64" />
		</section>

		<section if="android">
			<lib name="${haxelib:hxCodec}/ndll/Android/libvlc-v7.so" if="HXCPP_ARMV7" />
			<lib name="${haxelib:hxCodec}/ndll/Android/libvlc-64.so" if="HXCPP_ARM64" />
		</section>
	</target>
</xml>
